<AGF-HUDPlus-HealthBars>


	<!--Target Bar, AGF style-->
		<set xpath="/windows/window[@name='windowTargetBar']/@visibility">always</set>

		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/@pos">-180,-70</set>
		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/@width">360</set>
		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/@height">12</set>

		<append xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']">	
			<sprite depth="3" name="border2" pos="-2,2" width="364" height="16" sprite="menu_empty2px" color="[black]" type="sliced" fillcenter="false"/>
		</append>

		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/sprite[@name='border']/@color">100,100,100,250</set>
		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/sprite[@name='border']/@width">360</set>

		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/filledsprite/@color">150,0,0,255</set>
		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/filledsprite/@width">360</set>

		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/label/@pos">0,-18</set>
		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/label/@font_size">22</set>
		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/label/@justify">center</set>
		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/label/@height">26</set>
		<set xpath="/windows/window[@name='windowTargetBar']/rect[@visible='{isnotboss}']/label/@text">{name}:  {currentwithmax}</set>



</AGF-HUDPlus-HealthBars>